<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/background_exposure_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/exposure_setting_menu_content"/>

    <TextView
        android:id="@+id/textview_dde_title"
        style="@style/camera_exposure_settings_title"
        android:text="DDE" />
    <dji.ux.internal.SeekBar
        android:id="@+id/widget_thermal_camera_scene_dde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textview_dde_value"
        style="@style/thermal_camera_scene_settings_value"
        android:text="100" />

    <TextView
        android:id="@+id/textview_ace_title"
        style="@style/camera_exposure_settings_title"
        android:text="ACE" />
    <dji.ux.internal.SeekBar
        android:id="@+id/widget_thermal_camera_scene_ace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textview_ace_value"
        style="@style/thermal_camera_scene_settings_value"
        android:text="100" />

    <TextView
        android:id="@+id/textview_sso_title"
        style="@style/camera_exposure_settings_title"
        android:text="SSO" />
    <dji.ux.internal.SeekBar
        android:id="@+id/widget_thermal_camera_scene_sso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textview_sso_value"
        style="@style/thermal_camera_scene_settings_value"
        android:text="100" />

    <TextView
        android:id="@+id/textview_contrast_title"
        style="@style/camera_exposure_settings_title"
        android:text="Contrast" />
    <dji.ux.internal.SeekBar
        android:id="@+id/widget_thermal_camera_scene_contrast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textview_contrast_value"
        style="@style/thermal_camera_scene_settings_value"
        android:text="100" />

    <TextView
        android:id="@+id/textview_brightness_title"
        style="@style/camera_exposure_settings_title"
        android:text="Brightness" />
    <dji.ux.internal.SeekBar
        android:id="@+id/widget_thermal_camera_scene_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textview_brightness_value"
        style="@style/thermal_camera_scene_settings_value"
        android:text="100" />

</merge>