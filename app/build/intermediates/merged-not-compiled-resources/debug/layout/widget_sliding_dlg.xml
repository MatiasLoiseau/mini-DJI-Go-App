<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius_corner_bg"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="0dp">

    <ImageView
        android:id="@+id/imageview_dlg_title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/buttonsize_margin"
        android:background="@drawable/leftmenu_popup_alert"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/textview_dlg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_top_max_margin"
        android:layout_marginRight="@dimen/view_top_max_margin"
        android:layout_marginTop="@dimen/view_top_mid_margin"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal_medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_dlg_little_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_top_max_margin"
        android:layout_marginRight="@dimen/view_top_max_margin"
        android:layout_marginTop="@dimen/view_top_mid_margin"
        android:gravity="center"
        android:textColor="@color/yellow_medium"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone" >
    </TextView>

    <TextView
        android:id="@+id/textview_dlg_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_top_max_margin"
        android:layout_marginRight="@dimen/view_top_max_margin"
        android:layout_marginTop="@dimen/buttonsize_margin"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/view_top_min_margin"
        android:maxHeight="@dimen/fpv_scroll_tv_height"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbarDefaultDelayBeforeFade="0"
        android:scrollbarFadeDuration="2000"
        android:scrollbarSize="2dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarThumbVertical="@drawable/anim_grid_thumb"
        android:scrollbarTrackVertical="@color/white_transparent"
        android:scrollbars="vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal" />

    <LinearLayout
        android:id="@+id/linearlayout_dlg_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/buttonsize_half_margin"
        android:gravity="center" >

        <EditText
            android:id="@+id/edittext_value"
            style="@style/FpvGenSettingEtview"
            android:layout_width="@dimen/edittextview_width"
            android:focusableInTouchMode="true"
            android:inputType="numberSigned"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textview_value_unit"
            style="@style/GenCenterWrapTxt"
            android:layout_marginLeft="@dimen/view_top_min_margin"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_slidebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/buttonsize_margin"
        android:layout_marginRight="@dimen/buttonsize_margin"
        android:layout_marginTop="@dimen/buttonsize_half_margin" >

        <TextView
            android:id="@+id/textview_slidertitle"
            style="@style/GenCenterWrapTxt"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/left_menu_cb_bg"
            android:drawablePadding="@dimen/view_top_mid_margin"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/view_top_mid_margin"
            android:text="@string/left_menu_takeoff_switch"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/left_menu_txt"
            android:textSize="@dimen/text_size_normal" >
        </TextView>

        <dji.ux.internal.SlideAndFillSeekBar
            android:id="@+id/seekbar_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:padding="0dp"
            android:progress="50"
            android:progressDrawable="@drawable/left_menu_sb"
            android:thumb="@drawable/left_menu_thumb"
            android:thumbOffset="0dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonsize_height"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:background="@drawable/dlg_btn_bg"
            android:id="@+id/textview_button_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/app_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal_medium" />

        <ImageView
            android:id="@+id/imageview_divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white_medium_transparent"
            android:contentDescription="@string/app_name" />

        <TextView
            android:background="@drawable/dlg_btn_bg"
            android:id="@+id/textview_button_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/app_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal_medium" />
    </LinearLayout>

</LinearLayout>