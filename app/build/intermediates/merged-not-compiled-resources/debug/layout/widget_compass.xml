<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <ImageView
            android:id="@+id/background_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_compass_background"/>

        <ImageView
            android:id="@+id/imageview_inner_circles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_compass_inner_circles" />

        <ProgressBar
            android:id="@+id/progressbar_compass_sea"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:padding="0dp"
            android:progress="50"
            android:progressDrawable="@drawable/compass_sea"
            android:visibility="visible" />

        <dji.ux.internal.compass.VisualCompassView
            android:id="@+id/visual_compass_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <dji.ux.internal.compass.GimbalYawView
            android:id="@+id/gimbalyawview_compass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imageview_compass_rc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/compass_rc" />

        <ImageView
            android:id="@+id/compass_home_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_compass_home" />


        <ImageView
            android:id="@+id/imageview_gimbal_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_compass_gimbal_yaw" />

        <ImageView
            android:id="@+id/imageview_compass_aircraft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_compass_aircraft"/>

        <ImageView
            android:id="@+id/north_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/north"/>

</merge>
