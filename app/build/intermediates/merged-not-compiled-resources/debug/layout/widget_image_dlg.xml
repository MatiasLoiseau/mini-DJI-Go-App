<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_corner_bg"
    android:orientation="vertical"
    android:paddingBottom="0dp">

    <ImageView
        android:id="@+id/imageview_dlg_title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_top_mid_margin"
        android:layout_marginLeft="@dimen/view_top_max_margin"
        android:layout_marginRight="@dimen/view_top_max_margin"/>

    <TextView
        android:id="@+id/imageview_dlg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_top_max_margin"
        android:layout_marginRight="@dimen/view_top_max_margin"
        android:layout_marginTop="@dimen/view_top_mid_margin"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/imageview_dlg_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_top_max_margin"
        android:layout_marginRight="@dimen/view_top_max_margin"
        android:layout_marginTop="@dimen/view_top_mid_margin"
        android:gravity="center"
        android:textColor="@color/blue_highlight"
        android:textSize="@dimen/text_size_normal_medium"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageview_dlg_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_top_max_margin"
        android:layout_marginRight="@dimen/view_top_max_margin"
        android:layout_marginTop="@dimen/view_top_mid_margin"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/desc_below_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_top_max_margin"
        android:layout_marginRight="@dimen/view_top_max_margin"
        android:layout_marginTop="@dimen/view_top_mid_margin"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal_medium"
        android:textStyle="normal"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/imageview_dlg_divider_img"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/view_top_max_margin"
        android:background="@color/white_medium_transparent" />

    <LinearLayout
        android:id="@+id/imageview_dlg_btn_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonsize_height"
        android:background="@drawable/dlg_btn_bg"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/imageview_button_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/app_cancel"
            android:textColor="@drawable/selector_text"
            android:textSize="@dimen/text_size_normal_medium" />

        <ImageView
            android:id="@+id/imageview_divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white_medium_transparent" />

        <TextView
            android:id="@+id/imageview_button_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/app_ok"
            android:textColor="@drawable/selector_text"
            android:textSize="@dimen/text_size_normal_medium" />
    </LinearLayout>

</LinearLayout>