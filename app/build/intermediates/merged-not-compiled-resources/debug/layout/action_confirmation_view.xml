<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_alert"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lighter_gray" />

    <TextView
        android:id="@+id/confirmation_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lighter_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonsize_height"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_button_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/dlg_btn_bg"
            android:gravity="center"
            android:text="@string/app_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal_medium" />

        <ImageView
            android:id="@+id/imageview_divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white_medium_transparent"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/textview_button_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/dlg_btn_bg"
            android:gravity="center"
            android:text="@string/app_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal_medium" />
    </LinearLayout>
</LinearLayout>