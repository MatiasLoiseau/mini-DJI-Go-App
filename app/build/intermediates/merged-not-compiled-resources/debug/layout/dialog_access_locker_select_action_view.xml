<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/select_action_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_action_header"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_5_in_sw320dp"
        android:textSize="@dimen/text_size_normal_medium"
        android:textStyle="bold"/>
    <View
        android:id="@+id/header_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/select_action_header"
        android:layout_marginBottom="@dimen/dp_10_in_sw320dp"
        android:gravity="center_horizontal"
        android:background="@color/gray_divider_line"/>
    <TextView
        android:id="@+id/select_action_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_separator"
        android:text="@string/select_action_message"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_5_in_sw320dp"
        android:textSize="@dimen/text_size_normal"/>
    <View
        android:id="@+id/message_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/select_action_message"
        android:layout_marginTop="@dimen/dp_10_in_sw320dp"
        android:gravity="center_horizontal"
        android:background="@color/lighter_gray"/>
    <TextView
        android:id="@+id/change_password_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_separator"
        android:text="@string/change_password"
        android:textColor="@color/white"
        android:background="@drawable/access_locker_selector"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_10_in_sw320dp"
        android:textSize="@dimen/text_size_normal_medium"
        android:textStyle="bold"/>
    <View
        android:id="@+id/item_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/change_password_item"
        android:gravity="center_horizontal"
        android:background="@color/lighter_gray"/>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/access_locker"
        android:layout_above="@+id/item_separator"
        android:layout_margin="@dimen/dp_10_in_sw320dp"
        android:background="@drawable/selector_right_arrow_button"/>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/access_locker"
        android:layout_below="@+id/item_separator"
        android:layout_margin="@dimen/dp_10_in_sw320dp"
        android:background="@drawable/selector_right_arrow_button"/>
    <TextView
        android:id="@+id/remove_password_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_separator"
        android:text="@string/remove_password"
        android:textColor="@color/white"
        android:background="@drawable/access_locker_selector"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_10_in_sw320dp"
        android:textSize="@dimen/text_size_normal_medium"
        android:textStyle="bold"/>
</RelativeLayout>