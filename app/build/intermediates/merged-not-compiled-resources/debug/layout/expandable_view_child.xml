<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expandable_child_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/child_value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@drawable/selector_text"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/child_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black_half"
        android:background="@drawable/selector_tag"
        android:includeFontPadding="false"
        android:textStyle="italic"
        android:textSize="@dimen/text_size_small"/>

    <TextView
        android:id="@+id/child_value2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@drawable/selector_text"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/child_tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black_half"
        android:background="@drawable/selector_tag"
        android:includeFontPadding="false"
        android:textStyle="italic"
        android:textSize="@dimen/text_size_small"/>

    <TextView
        android:id="@+id/child_value3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@drawable/selector_text"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/child_tag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black_half"
        android:background="@drawable/selector_tag"
        android:includeFontPadding="false"
        android:textStyle="italic"
        android:textSize="@dimen/text_size_small"/>

</merge>