<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

    <TextView
        android:id="@+id/spotlight_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_5_in_sw320dp"
        android:layout_marginBottom="@dimen/dp_5_in_sw320dp"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal_medium"
        android:text="@string/spotlight_settings"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider_title"
        android:background="@color/gray_divider_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5_in_sw320dp"
        android:layout_marginBottom="@dimen/dp_5_in_sw320dp"
        android:id="@+id/spotlight_temperature_container">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/divider"
            android:layout_marginTop="@dimen/dp_5_in_sw320dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_divider_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/divider"
            android:id="@+id/spotlight_temperature_title"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/spotlight_temperature"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/divider"
            android:id="@+id/spotlight_temperature_value"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/spotlight_temperature_value"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spotlight_switch_container"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spotlight_switch_title"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/enabled"/>
        <dji.ux.internal.SwitchButton
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:gravity="center_vertical"
            android:id="@+id/spotlight_switch"
            android:layout_alignParentRight="true"
            android:checked="false"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_divider_line"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5_in_sw320dp"
        android:layout_marginBottom="@dimen/dp_5_in_sw320dp"
        android:gravity="center_vertical"
        android:id="@+id/spotlight_brightness_container">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spotlight_brightness_title"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/spotlight_brightness"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spotlight_brightness_warning"
            android:gravity="center_vertical"
            android:layout_below="@id/spotlight_brightness_title"
            android:layout_marginTop="@dimen/dp_10_in_sw320dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/spotlight_brightness_warning"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spotlight_brightness_value"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_above="@id/spotlight_brightness_warning"
            android:text="@string/spotlight_brightness_value"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"/>
        <SeekBar
            android:id="@+id/spotlight_brightness_seekbar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/spotlight_brightness_title"
            android:layout_toLeftOf="@+id/spotlight_brightness_value"
            android:maxHeight="@dimen/view_top_min_margin"
            android:minHeight="@dimen/view_top_min_margin"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@drawable/seek_thumb_enabled"
            android:thumbOffset="0dp"
            android:layout_above="@+id/spotlight_brightness_warning"/>
    </RelativeLayout>

</merge>