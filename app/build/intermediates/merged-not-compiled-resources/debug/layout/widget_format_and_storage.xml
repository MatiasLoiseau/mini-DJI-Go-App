<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@android:color/transparent">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_size_medium"
              android:textColor="@color/lighter_gray"
              android:id="@+id/TextView_card_info_title"
              tools:text="SD TIME"
              android:text="SD TIME"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_size_medium"
              android:textColor="@color/white"
              android:id="@+id/TextView_card_info_value"
              tools:text="100:33"
              android:text="100:33"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/ImageView_card_type"
               android:src="@drawable/sd"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_size_medium"
              android:textColor="@color/white"
              android:maxLines="1"
              android:id="@+id/TextView_image_format_value"
              tools:text="1080P/240"
              android:text="1080P/240"/>

</merge>